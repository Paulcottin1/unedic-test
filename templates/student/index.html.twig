{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <div class="container">
        <div>
            <h1 class="text-center">Student index</h1>

        </div>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>NumEtud</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody class="text-uppercase">
            {% for student in students %}
                <tr>
                    <td>{{ student.id }}</td>
                    <td>{{ student.firstName }}</td>
                    <td>{{ student.lastName }}</td>
                    <td>{{ student.numEtud }}</td>
                    <td>
                        <a href="{{ path('student_show', {'id': student.id}) }}" class="btn btn-danger">show</a>
                        <a href="{{ path('student_edit', {'id': student.id}) }}" class="btn btn-danger">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="container text-center">
            <a href="{{ path('student_new') }}" class="btn btn-primary">Create new</a>
        </div>
    </div>
{% endblock %}
