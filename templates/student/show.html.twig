{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <div class="container">
        <div class="container text-center">
            <h1>Student</h1>
        </div>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ student.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ student.lastName }}</td>
            </tr>
            <tr>
                <th>NumEtud</th>
                <td>{{ student.numEtud }}</td>
            </tr>
            </tbody>
        </table>

        <div class="container text-center">
            <a href="{{ path('student_index') }}" class="btn btn-danger">back to list</a>
            <a href="{{ path('student_edit', {'id': student.id}) }}" class="btn btn-primary">edit</a>
        </div>

        {{ include('student/_delete_form.html.twig') }}

    </div>
{% endblock %}
